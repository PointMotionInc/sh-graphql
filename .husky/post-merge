RED='\033[0;31m'
YELLOW='\033[1;33m'
GREEN='\033[1;32m'
NC='\033[0m' # No Color

echo;
echo -e "${YELLOW}Please be patient... restarting docker container to apply migrations & metadata.${NC}";
npm run restart-container;

if [ $? = 0 ];
then
    echo "${GREEN}[âˆš] Restart successful. Run ./run.sh script to start Hasura console.${NC}";
else
    echo "${RED}[x] Error while restarting container.${NC}";
fi
echo;
